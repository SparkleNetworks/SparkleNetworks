@{Layout = "Parent";}

<h1 class="h1" style="color: @Model.Lang.T("AccentColor");display: block;font-family: Arial;font-size: 34px;font-weight: lighter;line-height: 100%;margin-top: 0;margin-right: 0;margin-bottom: 10px;margin-left: 0;text-align: left;">déjeuner</h1>
<p>Bonjour @Model.FirstName,</p>
<p><a style='text-decoration:none; color:@Model.Lang.T("AccentColor");' href='@Model.PlaceUrl'>@Model.ContactFirstName @Model.ContactLastName</a> vous propose de déjeuner à @Model.PlaceName<span>.</span></p>

<div style="border-left:2px solid @Model.Lang.T("AccentColor"); padding-left:5px; margin-bottom:4px">
    <div style="color: #202020;display: block;font-family: Arial;font-weight: lighter;font-size: 14px;margin-top: 0;margin-right: 0;margin-bottom: 0;margin-left: 0;text-align: left;">@Model.EventDate.ToString("D")</div>
    <div style="color: #202020;display: block;font-family: Arial;font-weight: lighter;font-size: 14px;margin-top: 0;margin-right: 0;margin-bottom: 0;margin-left: 0;text-align: left;">@Model.EventDate.ToString("t") <a href="@Model.EventUrl" target="_blank" style="color: @Model.Lang.T("AccentColor");font-weight:normal; text-decoration:none;">@Model.EventName</a></div>
    <div style="font-size:11px">@(new RazorEngine.Text.RawString(Sparkle.Helpers.HtmlExtention.Markdown(null,Model.EventDescription).ToString()))</div>
    <br />
    <div>Vous répondez :</div>
    <a style='text-decoration:none; color:@Model.Lang.T("AccentColor");' href="@Model.LunchReponseYesUrl">Oui</a> - 
    <a style='text-decoration:none; color:@Model.Lang.T("AccentColor");' href="@Model.LunchReponseOtherUrl">Proposer un autre endroit</a>
</div>
<br />

Bonne journée,<br />