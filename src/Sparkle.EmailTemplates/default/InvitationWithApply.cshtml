@{Layout = "Parent";}
@{
    var inviteUrl = (string)Model.Data["InviteLink"];
    var personUrl = (string)Model.Data["PeopleLink"];
    var aboutNetwork = (string)Model.Data["AboutNetwork"];
}

<div style="text-align:center; background-color: @Model.Styles.PersonColor">
    <h1 style="text-align:center; padding: 20px 0; font-weight: lighter; color: #fff">@Model.Lang.T("Rejoindre {0}", Model.Lang.T("AppName"))</h1>
</div>

<div style="@Model.Styles.StyleContent">
<table>
    <tr>
	    <td valign="top" style="vertical-align:top;padding-right:10px;height:285px;">
		    <a target="_blank" href="@personUrl">
		    	<div style="overflow:hidden;border:5px solid #fff;box-shadow:0 0 5px #888;width:170px;height:200px">
				    <img alt="@Model.Model.DisplayName" src="@Model.Model.Picture" />
			    </div>
		    </a>
	    </td>
    	<td valign="top">
	    	<p style="@Model.Styles.StyleTour">
		    	@Model.Lang.T("Bonjour,")<br />
			    <a style='@Model.Styles.StyleLink' href='@personUrl'>@Model.Model.DisplayName</a> @Model.Lang.T("vous invite sur") <a style='@Model.Styles.StyleLink' href='@Model.Lang.T("AppDomain")'>@Model.Lang.T("AppName")</a> !
    		</p>

            <hr style="@Model.Styles.StyleHR" />
    		<div style="font-size:11px">@(new RazorEngine.Text.RawString(Sparkle.Helpers.HtmlExtention.Markdown(null,aboutNetwork).ToString()))</div>
        
	    </td>
    </tr>
    <tr>
        <td colspan="2">
            <hr style="@Model.Styles.StyleHR" />

            <div style="text-align:center;">
                <p><a style="@Model.Styles.StyleButton" href="@inviteUrl">@Model.Lang.T("Rejoindre {0}", Model.Lang.T("AppName"))</a></p>
                <p>@Model.Lang.T("Ou copiez ce lien dans votre navigateur")</p>
                <pre>@inviteUrl</pre>
            </div>
        </td>
    </tr>
</table>
</div>


